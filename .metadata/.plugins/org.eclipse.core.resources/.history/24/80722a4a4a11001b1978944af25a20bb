package practice;

public class MyDate {
	private int year;
	private int month;
	private int day;
	
	public MyDate(int year, int month, int day) {
		this.year = year;
		this.month = month;
		this.day = day;
	}
	public int getYear() {
		return year;
	}
	public void setYear(int year) {
		this.year = year;
	}
	public int getMonth() {
		return month;
	}
	public void setMonth(int month) {
		this.month = month;
	}
	public int getDay() {
		return day;
	}
	public void setDay(int day) {
		this.day = day;
	}
	
	public void isValid() {
		
	}
	
	public boolean isValidYear() {
		if(year < 1000) {
			return false;
		}
		return true;
	}
	
	public boolean isValidMonth() {
		if(month < 1 || month > 12) {
			return false;
		}
		return true;
	}
	
	public boolean isValidDay() {
		if(day < 1 || day > 31) {
			return false;
		}
		
		return true;
	}
	
	
	
	
}
