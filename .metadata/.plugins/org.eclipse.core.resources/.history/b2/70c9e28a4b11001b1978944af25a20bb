package practice;

public class MyDate {
	private int year;
	private int month;
	private int day;
	
	public MyDate(int day, int month, int year) {
		setYear(year);
		setMonth(month);
		setDay(day);
	}
	public int getYear() {
		return year;
	}
	public void setYear(int year) {
		this.year = year;
	}
	public int getMonth() {
		return month;
	}
	public void setMonth(int month) {
		this.month = month;
	}
	public int getDay() {
		return day;
	}
	public void setDay(int day) {
		this.day = day;
	}
	
	public String isValid() {
		if(isValidYear() 
			&& isValidMonth() 
			&& isValidDay() 
		) {
			return "날짜형식이 올바릅니다.";
		}
		
		return "날짜 형식이 올바르지 않습니다.";
	}
	
	public boolean isValidYear() {
		if(year < 1000) {
			return false;
		}
		return true;
	}
	
	public boolean isValidMonth() {
		if(month < 1 || month > 12) {
			return false;
		}
		return true;
	}
	
	public boolean isValidDay() {
		if(day < 1 || day > 31) {
			return false;
		}
		
		return true;
	}
	
	
	
	
}
