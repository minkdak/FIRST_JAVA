package hiding;

public class MyDate {

	// 패키지가 다르면 public 선언 해야함.
	private int day;
	private int year;
	private int month;
	
	public void setDay(int day) {
		this.day = day;
		
	}
	
	public int getDay() {
		return day;
	}
	
	public int getYear() {
		return year;
	}

	public void setYear(int year) {
		this.year = year;
	}

	public int getMonth() {
		return month;
	}

	public void setMonth(int month) {
		this.month = month;
	}

	public void showDate() {
		System.out.println( year + "년 " + month + "월 " + day + "일");
	}

}
